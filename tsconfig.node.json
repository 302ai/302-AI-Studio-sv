{
	"extends": ["@electron-toolkit/tsconfig/tsconfig.node.json", "./tsconfig.json"],
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "bundler",
		"composite": true,
		"noEmit": false,
		"outDir": "./.tsout/node"
	},
	"paths": {
		"@shared/*": ["shared/*"]
	},
	"include": ["electron/**/*", "shared/**/*"]
}
